<ul class="breadcrumb">
    <li><a href="{{ path('wishters_front_homepage') }}">Accueil</a></li>
    <li><a href="{{ path('wishter_front_region_show') }}">{{ annonce.region.nom }}</a></li>
    <li><a href="{{ path('fos_user_profile_show') }}">{{ annonce.user.username }}</a></li>
    <li class="active">{{ annonce.title }}</li>
</ul>

<div class="row annonce-container annonce-to-remove">

    <div class="annonce-img col-xs-3 text-center">
        {% if annonce.picture is not empty %}
            {% set picture = 'uploads/annonce/'~annonce.picture.path  %}
            <img src="{{ picture | imagine_filter('my_annonce_region_picture') }}" alt="Avatar" class="img-responsive img-rounded"/>
        {% else %}
            <img src="{{ 'bundles/wishtersfront/images/actu/telechargement.jpeg' | imagine_filter('my_annonce_region_picture') }}" alt="Avatar" class="img-responsive img-rounded"/>
        {% endif %}
    </div>

    <div class="annonce-content col-xs-9">
        <h3 class="title">{{ annonce.title }}</h3>
        <p class="date">Publié le {{ annonce.date|date('d M y à h\\hm') }} | <strong class="salmon">{% if annonce.negoce == true %} Négociable {% endif %} - {% if annonce.urgent == true %} Urgent {% endif %}</strong></p>
        <p>{{ annonce.content|nl2br|truncate(100) }}
        </p>
    </div>

</div>

<div class="col-xs-6 col-xs-offset-3 text-center">
    <p><i class="fa fa-warning text-danger"></i> Cette action est irréversible</p>
    <hr/>
</div>

<div class="col-xs-6 col-xs-offset-3 text-center">
    <a href="{{ path('wishters_front_annonce_remove_traitement',{'id': annonce.id}) }}" class="btn btn-danger btn-radius-30">Je confirme la suppression</a>
</div>
