<div class="user-infos">
    {% set picture = 'uploads/user/avatar/'~app.user.avatar.path %}
    <img src="{{ picture |imagine_filter('my_carte') }}" alt="Avatar" class="img-rounded img-responsive"/>
    <div class="user-infos-options">
        <h3>{{ app.user.username|truncate(12) }}</h3>

        <p>{{ app.user.region.nom }}</p>
        <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modalAddAnnonce" id="modalAddAnnonceShow"><i class="fa fa-wifi"></i> Annonce</button>
        <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modalBlog" id="modalAddBlogShow"><i class="fa fa-comment"></i> Message</button>
    </div>
</div>

<div class="user-activity">
    <h3>Activité</h3>
    <ul class="list-group">
        <li class="list-group-item"><i class="fa fa-anchor"></i> Blog <span class="badge badge-default pull-right">new</span></li>
        <li class="list-group-item"><i class="fa fa-shopping-cart"></i> Message <span class="badge badge-default pull-right">0</span></li>
        <li class="list-group-item"><i class="fa fa-coffee"></i> Annonces <span class="badge badge-default pull-right">{{ countAnnonce }}</span></li>
        <li class="list-group-item"><i class="fa fa-comment-o"></i> Abonnements <span class="badge badge-default pull-right">10</span></li>
        <li class="list-group-item"><i class="fa fa-comments-o"></i> Abonnés <span class="badge badge-default pull-right">2</span></li>
    </ul>
</div>