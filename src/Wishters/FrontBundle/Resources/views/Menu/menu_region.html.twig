<div class="user-infos">
    <img src="{{ 'bundles/wishtersfront/images/carteFrance.png'| imagine_filter('my_carte') }}" alt="Avatar" class="img-rounded img-responsive"/>
    <div class="user-infos-options">
        <h3><a href="{{ path('wishter_front_region_show', {'region' : region.slug }) }}" class="inherit-link">{{ region.nom }}</a></h3>

        <p>Vinon sur verdon</p> {#Ou rien si c'est juste une région à afficher#}
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <button type="button" class="btn btn-success btn-sm"><i class="fa fa-check"></i> S'abonner</button>
        <button type="button" class="btn btn-default btn-sm"><i class="fa fa-comment"></i> Message</button>
        {% else %}
            <a href="{{ path('fos_user_registration_register') }}">
                <button type="button" class="btn btn-warning btn-sm"><i class="fa fa-sign-in"> Créer un compte</i></button>
            </a>
        {% endif %}
    </div>
</div>

<div class="user-activity">
    <h3>Activité</h3>
    <ul class="list-group">
        <li class="list-group-item"><i class="fa fa-anchor"></i> Blog <span class="badge badge-default pull-right">new</span></li>
        <li class="list-group-item"><i class="fa fa-shopping-cart"></i> Message <span class="badge badge-default pull-right">0</span></li>
        <li class="list-group-item"><i class="fa fa-coffee"></i> Annonces <span class="badge badge-default pull-right">{{ annonces|length }}</span></li>
        <li class="list-group-item"><i class="fa fa-comments-o"></i> Abonnés <span class="badge badge-default pull-right">2</span></li>
    </ul>
</div>