{% extends '::base_welcome.html.twig' %}
{% block body %}
<div class="register-header">
    <h1>Wishters</h1>
</div>

<div class="register-body">

    <div class="col-xs-12 wlc-content">
        <div class="col-xs-offset-1 col-xs-5">

            <div class="wlc-signin div-no-padding">

                {{ render(controller('WishtersUserBundle:Security:loginWelcome')) }}

            </div>
            <p class="note pull-right">Mot de passe oublié?</p>

        </div>
        <div class="col-xs-offset-1 col-xs-5 wlc-content-ctt ">
            <img src="{{ asset('bundles/wishtersfront/images/wlc_pic.jpg') }}" alt="#" class="img-responsive"/>
            <h4>Cherchez. Vendez. Simplement.</h4>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="clearfix"></div>

</div>
    <hr/>
    <div class="col-xs-12">
        <div class="text-center">
            <a href="{{ path('wishters_front_homepage') }}"><button class="btn btn-success btn-radius-30"><i class="fa fa-home"></i> Commencez à chercher</button></a>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <a href="{{ path('wishter_front_user_spacebox') }}"><button class="btn btn-salmon btn-radius-30"><i class="fa fa-question-circle"></i> Mon espace sur Wishters</button></a>
            {% else %}
                <a href="{{ path('fos_user_registration_register') }}"><button class="btn btn-salmon btn-radius-30"><i class="fa fa-question-circle"></i> Envie de s'inscrire ?</button></a>
            {% endif %}
        </div>
    </div>
{% endblock %}
